
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Request Reimbursement Parking</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/assets/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/assets/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/assets/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/assets/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/assets/dist/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.css">
</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Request Reimbursement Parking</h1>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- SELECT2 EXAMPLE -->
                    <div class="card card-default">
                        <div class="card-header">
                            <h3 class="card-title">Create New Request</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="inputCity">PLAT NUMBER</label>
                                        <div class="form-row">
                                            <div class="form-group col-sm-2">
                                                <input type="text" class="form-control" id="PLATNumber1">
                                            </div>
                                            <div class="form-group col-sm-4">
                                                <input type="number" class="form-control" id="PLATNumber2">
                                            </div>
                                            <div class="form-group col-sm-4">
                                                <input type="text" class="form-control" id="PLATNumber3">
                                            </div>
                                        </div>
                                        <small id="PLATNumberHelpBlock" class="form-text text-muted">
                                            *)All Field Must be Filled !
                                        </small>
                                    </div>

                                    <div class="form-group">
                                        <label for="VehicleOwner">Vehicle Owner Name Base on 'STNK'</label>
                                        <input type="text" class="form-control" id="VehicleOwner">
                                        <small id="VehicleOwnerHelpBlock" class="form-text text-muted">
                                            *)Field Must be Filled !
                                        </small>
                                    </div>

                                    <div class="form-group">
                                        <label for="TotalPrice">Total Price</label>
                                        <input type="number" class="form-control" id="TotalPrice">
                                        <small id="TotalPricerHelpBlock" class="form-text text-muted">
                                            *)Field Must be Filled !
                                        </small>
                                    </div>

                                    <div class="form-group">
                                        <label for="ParkingName">Parking Name</label>
                                        <input type="text" class="form-control" id="ParkingName">
                                        <small id="PakingNamerHelpBlock" class="form-text text-muted">
                                            *)Field Must be Filled !
                                        </small>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group ">
                                        <label for="Periode">Periode</label>
                                        <select class="form-control select2" id="PeriodeDropDown" name="PeriodeDropDown"></select>
                                    </div>

                                    <div class="form-group">
                                        <label for="VehicleType" class="mt-7">Vehicle Type</label>
                                        <select id="VehicleType" class="form-control select2" style="width: 100%;">
                                            <option selected="selected">Motorbike</option>
                                            <option>Car</option>
                                        </select>
                                    </div>

                                    <div class="form-group mb-7">
                                        <label for="PaymentType">Payment Type</label>
                                        <select id="PaymentType" class="form-control select2" style="width: 100%;">
                                            <option>Hourly</option>
                                            <option selected="selected">Daily</option>
                                            <option>Monthly</option>
                                            <option>Yearly</option>
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label for="ParkingAddress">Parking Address</label>
                                        <textarea id="ParkingAddress" class="form-control" rows="3" placeholder="Perumahan Bumi Permai, Jalan Gondang Jati 17, RT 09 RW 03, Kelurahan Kaliran, Kecamatan Kaliwangi, Kota Malang, Jawa Timur, 224352"></textarea>
                                        <small id="PakringAddressHelpBlock" class="form-text text-muted">
                                            *)Field Must be Filled !
                                        </small>
                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <label for="ReimbursementFile">Upload(Ticket Parking and 'STNK')</label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" id="ReimbursementFile" accept="application/pdf">
                                            <label class="custom-file-label" for="ReimbursementFile">Choose file</label>
                                        </div>
                                        <small id="ReimbursementFileHelpBlock" class="form-text text-muted">
                                            *)Please upload in PDF format with size less than 1MB !
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <!-- /.row -->
                        </div>
                        <div class="card-footer">
                            <button onclick="return CreateNewRequest()" type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col (right) -->
            </section>
            <!-- /.content -->
        </div>
    </div>
</body>
</html>

@section scriptAdminLTE{
    <!-- MommentJs -->
    <script src="https://momentjs.com/downloads/moment.js"></script>
    <!-- Select2 -->
    <script src="~/assets/plugins/select2/js/select2.full.min.js"></script>
    <!-- bs-custom-file-input -->
    <script src="~/assets/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <!--AJAX & Jquery-->>

    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.js"></script>
    <script src="~/Scripts/RequestReimbursementParkingScript.js"></script>
}


